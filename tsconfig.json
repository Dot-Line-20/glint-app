{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES6",
    "jsx": "react",
    "strict": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      // "*": ["types/*.d.ts"],
      "@components/*": ["./components/*"],
      "@images/*": ["./images/*.svg"],
      "@pages/*": ["./pages/*"],
      "@CTypes/*": ["./types/*"],
      "@lib/*": ["./lib/*"]
    }
  },
  "exclude": ["./node_modules/**/*"]
}
